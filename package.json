{
  "name": "nola-design-system",
  "version": "0.1.0",
  "private": true,
  "description": "NOLA Design System - Educational UI components and themes for K-12 and post-graduate learning platforms",
  "keywords": ["design-system", "education", "ui-components", "storybook", "shadcn", "tailwind", "accessibility"],
  "repository": {
    "type": "git",
    "url": "https://github.com/ethan-nola/nola-design-system.git"
  },
  "author": "NOLA Education",
  "license": "MIT",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build && bun run storybook:build",
    "start": "next start",
    "lint": "eslint .",
    "test": "vitest run",
    "test:unit": "vitest run --project=unit",
    "test:storybook": "vitest run --project=storybook",
    "test:constitutional": "vitest run --project=constitutional-compliance",
    "test:constitutional:watch": "vitest --project=constitutional-compliance --watch",
    "test:constitutional:principle": "vitest run --project=constitutional-compliance tests/constitutional/principles/principle",
    "test:constitutional:report": "bun run scripts/constitutional-report.ts",
    "test:constitutional:ci": "vitest run --project=constitutional-compliance --reporter=json --outputFile=constitutional-report.json",
    "test:constitutional:grep": "vitest run --project=constitutional-compliance --grep",
    "type-check": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "release": "semantic-release",
    "registry:build": "shadcn build -o ./public/v2/r",
    "registry:dev": "shadcn build -o ./public/v2/r --watch",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o public/storybook",
    "storybook:test": "test-storybook",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.544.0",
    "next": "^15.5.4",
    "next-themes": "^0.4.6",
    "prettier": "^3.6.2",
    "radix-ui": "^1.4.3",
    "react": "19.1.1",
    "react-day-picker": "^9.11.0",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.63.0",
    "react-resizable-panels": "^3.0.6",
    "recharts": "^3.2.1",
    "shadcn": "^3.3.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0",
    "vaul": "^1.1.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@storybook/addon-a11y": "^9.1.8",
    "@storybook/addon-docs": "^9.1.8",
    "@storybook/addon-themes": "^9.1.8",
    "@storybook/addon-vitest": "^9.1.8",
    "@storybook/nextjs-vite": "^9.1.8",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.4",
    "eslint-plugin-storybook": "^9.1.8",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.1",
    "postcss": "^8.5.6",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "semantic-release": "^24.2.9",
    "storybook": "^9.1.8",
    "storybook-addon-test-codegen": "^2.0.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
